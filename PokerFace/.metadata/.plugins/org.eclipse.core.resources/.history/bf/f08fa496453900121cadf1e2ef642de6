
package ch.hearc.coursjava.poo.interfaces;

import java.util.ArrayList;
import java.util.List;



public class UseHomme
	{
	/*------------------------------------------------------------------*\
	|*							Methodes Public							*|
	\*------------------------------------------------------------------*/

	public static void main(String[] args)
		{
		main();
		}

	public static void main()
		{
		List<Homme> hommes = new ArrayList<Homme>();

		Homme homme1 = new Homme(1,"h1");
		Homme homme2 = new Homme(2,"h2");
		Homme homme3 = new Homme(3,"h3");

		hommes.add(homme1);
		hommes.add(homme2);
		hommes.add(homme3);

		afficher(hommes);
		}

	/*------------------------------------------------------------------*\
	|*							Methodes Private						*|
	\*------------------------------------------------------------------*/

	private static void afficher(List<Homme> listHommes)
		{
		for(Homme homme:listHommes)
			{
			homme.afficher();
			}
		}
	
	}

