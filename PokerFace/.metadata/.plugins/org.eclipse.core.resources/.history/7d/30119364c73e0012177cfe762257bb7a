
package ch.hearc.coursjava.poo.derivation.form;

import ch.hearc.coursjava.kitbase.tools.MathTools;

public class Carre extends Form
	{
	
	/*------------------------------------------------------------------*\
	|*							Constructeurs							*|
	\*------------------------------------------------------------------*/
	
	public Carre(String nom, double cote)
		{
		super(nom);
		this.cote = cote;
		}
	
	public Carre(Carre source)
		{
		super(source);
		this.cote = source.cote;
		}
	
	/*------------------------------------------------------------------*\
	|*							Methodes Public							*|
	\*------------------------------------------------------------------*/
	
	@Override
	public double aire()
		{
		return cote * cote;
		}
	
	@Override
	public double perimetre()
		{
		return 4 * cote;
		}
	
	@Override
	public Carre cloneOf()
		{
		return new Carre(this);
		}
	
	/*------------------------------*\
	|*				Is				*|
	\*------------------------------*/
	
	@Override
	public boolean isEquale(Carre carre)
		{
		// TODO Auto-generated method stub
		return super.isEquale(carre) && MathTools.isEgal(cote, carre.cote);
		}
	
	/*------------------------------*\
	|*				Get				*|
	\*------------------------------*/
	
	public double getCote()
		{
		return this.cote;
		}
	
	/*------------------------------------------------------------------*\
	|*							Methodes Private						*|
	\*------------------------------------------------------------------*/
	
	/*------------------------------------------------------------------*\
	|*							Attributs Private						*|
	\*------------------------------------------------------------------*/
	
	//input
	private double cote;
	
	}
