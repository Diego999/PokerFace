
package ch.hearc.coursjava.poo.derivation.form;

import static java.lang.Math.PI;

public class Cercle extends Form
	{

	/*------------------------------------------------------------------*\
	|*							Constructeurs							*|
	\*------------------------------------------------------------------*/

	public Cercle(String nom, double rayon)
		{
		super(nom);
		this.rayon = rayon;
		}

	public Cercle(Cercle source)
		{
		super(source);
		this.rayon = source.rayon;
		}

	/*------------------------------------------------------------------*\
	|*							Methodes Public							*|
	\*------------------------------------------------------------------*/

	@Override
	public boolean equals(Object object)
		{
		if(object instanceof Cercle)
			{
			return isEquale((Cercle)object)
			}
		return false;
		}
	
	@Override
	public double aire()
		{
		return rayon * rayon * PI;
		}

	@Override
	public double perimetre()
		{
		return 2 * rayon * PI;
		}

	@Override
	public Cercle cloneOf()
		{
		return new Cercle(this);
		}

	/*------------------------------*\
	|*				Get				*|
	\*------------------------------*/

	public double getRayon()
		{
		return this.rayon;
		}

	/*------------------------------------------------------------------*\
	|*							Methodes Private						*|
	\*------------------------------------------------------------------*/

	/*------------------------------------------------------------------*\
	|*							Attributs Private						*|
	\*------------------------------------------------------------------*/

	//input
	private double rayon;

	}
