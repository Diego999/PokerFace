	@Test
	public void testGetter()
		{
		Complexe z = new Complexe(4, 3);

		assertTrue(z.getIm() == 3);
		assertTrue(z.getRe() == 4);
		assertTrue(z.getModule() == 5);
		assertTrue(MathTools.isEgal(z.getArgument(), Math.atan2(3, 4), 1e-6));
		}
	
