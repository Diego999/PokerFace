
package ch.hearc.coursjava.gui.j2d.image;

import java.awt.Graphics;
import java.awt.Graphics2D;
import java.awt.Image;
import java.awt.Toolkit;
import java.awt.geom.AffineTransform;

import javax.swing.ImageIcon;
import javax.swing.JPanel;

public class JPanelImage extends JPanel
	{

	/*------------------------------------------------------------------*\
	|*							Constructeurs							*|
	\*------------------------------------------------------------------*/
	public JPanelImage()
		{
		String nomImageBlocante = "./ressources/he_arc.png";
		imageBlocante = Toolkit.getDefaultToolkit().getImage(nomImageBlocante);

		String nomImageNonBlocante = "./ressources/java.jpg";
		ImageIcon icon = new ImageIcon(nomImageNonBlocante);
		imageNonBlocante = icon.getImage();
		System.out.println("non blocante taille: " + icon.getIconWidth());

		geometrie();
		control();
		apparence();
		}

	/*------------------------------------------------------------------*\
	|*							Methodes Public							*|
	\*------------------------------------------------------------------*/

	@Override
	protected void paintComponent(Graphics g)
		{
		super.paintComponent(g);
		Graphics2D g2d = (Graphics2D)g;
		AffineTransform transformOld = g2d.getTransform();
		dessiner(g2d);
		g2d.setTransform(transformOld);
		}

	/*------------------------------*\
	|*				Set				*|
	\*------------------------------*/

	/*------------------------------*\
	|*				Get				*|
	\*------------------------------*/

	/*------------------------------------------------------------------*\
	|*							Methodes Private						*|
	\*------------------------------------------------------------------*/
	private void geometrie()
		{
		}

	private void control()
		{
		}

	private void apparence()
		{
		}

	private void dessiner(Graphics2D g2d)
		{
		g2d.scale(0.2, 0.2);
		g2d.drawImage(imageBlocante, 10, 10, null);

		g2d.scale(1, 1);
		g2d.translate(0, 400);
		g2d.drawImage(imageNonBlocante, 10, 10, null);
		}

	/*------------------------------------------------------------------*\
	|*							Attributs Private						*|
	\*------------------------------------------------------------------*/

	// Tools
	private Image imageBlocante;
	private Image imageNonBlocante;
	private Image imageJAR; // TODO: for 28.02.2013
	}
